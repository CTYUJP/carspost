<div class="contents box">
  <p><%= @name %>さんの投稿一覧</p>
  <% @posts.each do |post| %>
    <div class="kari">
      <div class="content_post" style="background-image: url(<%= post.image %>);">
        <span class="name"><%= post.user.name %></span>
        <p><%= post.text %></p>
      </div>
    </div>
  <% end %>
</div>