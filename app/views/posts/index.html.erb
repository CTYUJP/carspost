<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        こんにちは、
        <%= link_to "#{current_user.name}さん", user_path(current_user), class: 'greeting__link' %>
      </div>
    <% end %>
    <div class="card__wrapper">
      <% @posts.each do |post| %>
        <div class="card">
          <%= link_to post.user.name, user_path(post.user), class: 'card__user' %>
          <%= link_to image_tag(post.image, class: 'card__img'), post_path(post) %>
            <p class="card__comment">
              <%= post.text %>
            </p>
        </div>
      <% end %>
    </div>
  </div>
</main>